{
    "name": "wexts",
    "version": "1.0.1",
    "description": "The all-in-one wexts framework combining NestJS and Next.js",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "fusion": "./dist/cli/index.js"
    },
    "files": [
        "dist",
        "templates"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client/index.d.ts",
            "import": "./dist/client/index.mjs",
            "require": "./dist/client/index.js"
        },
        "./types": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/types/index.mjs",
            "require": "./dist/types/index.js"
        },
        "./nest": {
            "types": "./dist/nest/index.d.ts",
            "import": "./dist/nest/index.mjs",
            "require": "./dist/nest/index.js"
        },
        "./next": {
            "types": "./dist/next/index.d.ts",
            "import": "./dist/next/index.mjs",
            "require": "./dist/next/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "lint": "eslint src",
        "release": "npm run build && npm publish --access public"
    },
    "keywords": [
        "wexts",
        "framework",
        "fullstack",
        "nestjs",
        "nextjs",
        "monorepo",
        "typescript"
    ],
    "author": "wexts Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ziadmustafa1/wexts.git",
        "directory": "packages/wexts"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "vitest": "^1.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/http-proxy": "^1.17.14"
    },
    "dependencies": {
        "commander": "^11.1.0",
        "inquirer": "^9.2.12",
        "chokidar": "^3.5.3",
        "picocolors": "^1.0.0",
        "reflect-metadata": "^0.2.1",
        "typescript": "^5.3.0",
        "http-proxy": "^1.18.1"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "next": "^14.0.0 || ^15.0.0 || ^16.0.0"
    },
    "peerDependenciesMeta": {
        "@nestjs/common": {
            "optional": true
        },
        "@nestjs/core": {
            "optional": true
        },
        "react": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    },
    "publishConfig": {
        "access": "public"
    }
}