{
    "name": "wexts",
    "version": "3.0.2",
    "description": "Build production-ready full-stack apps with Next.js 16 + NestJS 11 in a unified runtime. Zero URLs. Zero configuration.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "wexts": "./dist/cli/index.js"
    },
    "files": [
        "dist",
        "templates",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client/index.d.ts",
            "import": "./dist/client/index.mjs",
            "require": "./dist/client/index.js"
        },
        "./types": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/types/index.mjs",
            "require": "./dist/types/index.js"
        },
        "./nest": {
            "types": "./dist/nest/index.d.ts",
            "import": "./dist/nest/index.mjs",
            "require": "./dist/nest/index.js"
        },
        "./next": {
            "types": "./dist/next/index.d.ts",
            "import": "./dist/next/index.mjs",
            "require": "./dist/next/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "release": "npm run build && npm publish --access public"
    },
    "keywords": [
        "wexts",
        "framework",
        "fullstack",
        "nestjs",
        "nextjs",
        "monorepo",
        "typescript",
        "react",
        "unified-runtime",
        "zero-config",
        "type-safe",
        "prisma",
        "jwt-auth",
        "docker",
        "next.js",
        "nest.js"
    ],
    "author": "WEXTS Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ziadmustafa1/wexts.git"
    },
    "homepage": "https://github.com/ziadmustafa1/wexts#readme",
    "bugs": {
        "url": "https://github.com/ziadmustafa1/wexts/issues"
    },
    "engines": {
        "node": ">=20.9.0",
        "pnpm": ">=10.0.0"
    },
    "devDependencies": {
        "@swc/core": "^1.15.3",
        "@types/http-proxy": "^1.17.15",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.6",
        "eslint": "^9.17.0",
        "tsup": "^8.3.5",
        "vitest": "^2.1.8"
    },
    "dependencies": {
        "chokidar": "^4.0.3",
        "commander": "^12.1.0",
        "consola": "^3.2.3",
        "http-proxy": "^1.18.1",
        "inquirer": "^12.4.0",
        "picocolors": "^1.1.1",
        "reflect-metadata": "^0.2.2",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.0.0",
        "@nestjs/core": "^11.0.0",
        "next": "^16.0.0",
        "react": "^19.0.0"
    },
    "peerDependenciesMeta": {
        "@nestjs/common": {
            "optional": true
        },
        "@nestjs/core": {
            "optional": true
        },
        "react": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    },
    "publishConfig": {
        "access": "public"
    }
}