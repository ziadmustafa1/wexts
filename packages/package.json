{
    "name": "wexts",
    "version": "2.0.8",
    "description": "Modern full-stack framework combining NestJS 11 and Next.js 16",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "wexts": "./dist/cli/index.js"
    },
    "files": [
        "dist",
        "templates"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client/index.d.ts",
            "import": "./dist/client/index.mjs",
            "require": "./dist/client/index.js"
        },
        "./types": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/types/index.mjs",
            "require": "./dist/types/index.js"
        },
        "./nest": {
            "types": "./dist/nest/index.d.ts",
            "import": "./dist/nest/index.mjs",
            "require": "./dist/nest/index.js"
        },
        "./next": {
            "types": "./dist/next/index.d.ts",
            "import": "./dist/next/index.mjs",
            "require": "./dist/next/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "release": "npm run build && npm publish --access public"
    },
    "keywords": [
        "wexts",
        "framework",
        "fullstack",
        "nestjs",
        "nextjs",
        "monorepo",
        "typescript",
        "react"
    ],
    "author": "wexts Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ziadmustafa1/wexts.git",
        "directory": "packages/fusionjs"
    },
    "engines": {
        "node": ">=20.9.0",
        "pnpm": ">=10.0.0"
    },
    "devDependencies": {
        "tsup": "^8.3.5",
        "vitest": "^2.1.8",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.6",
        "@types/http-proxy": "^1.17.15",
        "eslint": "^9.17.0"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "inquirer": "^12.4.0",
        "chokidar": "^4.0.3",
        "picocolors": "^1.1.1",
        "reflect-metadata": "^0.2.2",
        "typescript": "^5.9.3",
        "http-proxy": "^1.18.1",
        "consola": "^3.2.3"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.0.0",
        "@nestjs/core": "^11.0.0",
        "react": "^19.0.0",
        "next": "^16.0.0"
    },
    "peerDependenciesMeta": {
        "@nestjs/common": {
            "optional": true
        },
        "@nestjs/core": {
            "optional": true
        },
        "react": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
